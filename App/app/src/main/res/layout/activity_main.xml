<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MainActivity"
    android:id="@+id/home_layout">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:id="@+id/logo_top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo_top" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logo_bottom"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo_btm"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/logo_middle"
        android:layout_below="@+id/logo_top"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo1" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:id="@+id/loginForm"
        android:visibility="invisible"
        android:layout_alignTop="@+id/logo_bottom"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailEntry"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:ems="10" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEntry"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:hint="***********" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:ems="10"
            />
    </GridLayout>

</RelativeLayout>
