<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="flow.app.club.ClubPageActivity"
    android:background="@drawable/logo_replace">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0099CC"
        android:id="@+id/topBar" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_circ"
            android:id="@+id/back_circle"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="Error - Club not found"
            android:id="@+id/clubTitle"
            android:layout_toRightOf="@id/back_circle"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:paddingTop="4dp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Check In"
        android:layout_below="@+id/topBar"
        android:id="@+id/clubCheckIn"
        android:layout_centerHorizontal="true"
        android:textColor="#0099CC"
        android:textStyle="bold"
        android:textSize="17dp"
        android:background="@drawable/checkin_btn"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/club_page_separator"
        android:layout_below="@id/clubCheckIn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queue Time:"
        android:id="@+id/clubQueueLabel"
        android:textSize="25dp"
        android:layout_below="@+id/clubCheckIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 minutes"
        android:id="@+id/clubQueueTime"
        android:textSize="25dp"
        android:layout_below="@+id/clubCheckIn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/club_page_separator"
        android:layout_below="@id/clubQueueLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance:"
        android:id="@+id/clubDistanceLabel"
        android:textSize="25dp"
        android:layout_below="@+id/clubQueueLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.2 Miles"
        android:id="@+id/clubDistance"
        android:textSize="25dp"
        android:layout_below="@+id/clubQueueLabel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/club_page_separator"
        android:layout_below="@id/clubDistanceLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Rating:"
        android:id="@+id/clubRatingLabel"
        android:textSize="25dp"
        android:layout_below="@+id/clubDistanceLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="****"
        android:id="@+id/clubRating"
        android:textSize="25dp"
        android:layout_below="@+id/clubDistanceLabel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/club_page_separator"
        android:layout_below="@id/clubRatingLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flow Rating:"
        android:id="@+id/clubFlowRatingLabel"
        android:textSize="25dp"
        android:layout_below="@+id/clubRatingLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1.2"
        android:id="@+id/clubFlowRating"
        android:textSize="25dp"
        android:layout_below="@+id/clubRatingLabel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/club_page_separator"
        android:layout_below="@id/clubFlowRatingLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bridge3"
        android:layout_below="@id/clubFlowRatingLabel"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentLeft="true"
        android:id="@+id/firstClubImage"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bridge2"
        android:layout_below="@id/clubFlowRatingLabel"
        android:layout_toRightOf="@id/firstClubImage"
        android:layout_marginTop="20dp"
        android:id="@+id/secondClubImage"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bridge1"
        android:layout_below="@id/clubFlowRatingLabel"
        android:layout_toRightOf="@id/secondClubImage"
        android:layout_marginTop="20dp"
        android:id="@+id/thirdClubImage"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/club_page_separator"
        android:layout_below="@id/firstClubImage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/firstClubImage"
            android:layout_marginTop="20dp"
            android:stretchColumns="1"
            android:id="@+id/drinksTable">

        </TableLayout>

    </RelativeLayout>

</ScrollView>